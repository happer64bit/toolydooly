{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*", "src/**", "vite.config.ts", "tsconfig.json", "package.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "env": ["AUTH_DATABASE_URL", "REDIS_HOST", "REDIS_PASSWORD", "QUEUE_URL", "TODO_DATABASE_URL"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
