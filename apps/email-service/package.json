    "@toolydooly/validation-schemas": "*",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "@toolydooly/typescript-config": "*",
    "@types/amqplib": "^0.10.7",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^7.0.1",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "nodemon": "^3.1.0",
    "typescript": "5.5.4"
  },
  "packageManager": "bun@1.2.21"
}
