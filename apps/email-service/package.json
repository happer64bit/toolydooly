{
  "name": "email-service",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "node:dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
