{
  "name": "toolydooly",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "turbo run clean",
    "dev": "dotenv -- turbo run dev",
    "dev:backend": "dotenv -- turbo run dev --filter='!web-app'",
    "dev:frontend": "dotenv -- turbo run dev --filter='web-app'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "dotenv -- turbo run test",
    "migrate:auth": "dotenv -- npm --prefix apps/auth-service run migrate"
  },
  "dependencies": {
    "dotenv-cli": "^10.0.0",
    "express": "^5.2.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
