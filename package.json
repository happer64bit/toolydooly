{
  "name": "toolydooly",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "clean": "turbo run clean",
    "dev": "dotenv -- turbo run dev",
    "dev:backend": "dotenv -- turbo run dev --filter='!web-app'",
    "dev:frontend": "dotenv -- turbo run dev --filter='web-app'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "dotenv -- turbo run test",
    "migrate:auth": "dotenv -- npm --prefix apps/auth-service run migrate"
  },
  "dependencies": {
    "dotenv-cli": "^10.0.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "redis": "^5.8.2",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "prettier": "^3.2.5",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
